<!DOCTYPE html>
<html>
  <head>
    <title>ProjectConversation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= turbo_include_tags %>
  </head>

  <body class="bg-gray-100 text-gray-900">
    <nav class="bg-white p-4 shadow">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-lg font-bold">
          <%= link_to "Projects", root_path, class: "text-blue-600 hover:underline" %>
        </h1>

        <% if user_signed_in? %>
          <div>
            <span class="mr-2">Hi, <%= current_user.email %></span>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "text-red-500 hover:underline" %>
          </div>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "text-blue-600 hover:underline" %>
        <% end %>
      </div>
    </nav>

    <div class="bg-gray-100 min-h-screen">
      <div class="w-full container mx-auto h-14 py-2">
        <%= render "shared/flash" %>
      </div>
      
      <div class="w-full container mx-auto p-6 bg-white shadow-md rounded-lg">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
